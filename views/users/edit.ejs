<body>
<!-- Main Nav -->
<%- include('../../partials/navBar') %>

<!-- Main About -->
<header id="userListPage"></header>
  <h2 class="joinUs"><%= user.name %>'s profile</h2>
    <div class="mainSection"></div>
  <h3><%= user.name %>'s profile</h3> 
  <form action="/users/new" method="POST" class="formSign">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name='name' placeholder="Change Your Name">
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name='email' placeholder="Change Your Email">
      </div>
      <div class="form-group col-md-6">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name='password' placeholder="Change Your Password">
      </div>
      </div>
  <button type="submit" class="btn btn-primary">Update!</button>
</body>
</html>